{% extends 'base.html.twig' %}

{% block title %}Hello TodoController!{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>Список дел {{user.email}} </h2> 
    <div class="row my-5">
        <div class="col-md-5">
            <input class="form-control" type="text" placeholder="Введите новую задачу">
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary"> Добавить </button>
        </div> 
    </div> 
    
    <div class="card">
      <div class="card-body">
        <h5 class="card-title job-name">
            <input class="form-check-input" id="job" type="checkbox">
            <label class="form-check-label" for="job"> Задача </label>
         </h5>
        </div>
    </div> 

</div> 

<script type="text/javascript">
    $('.job-name>.form-check-input').change(function(){
        if(!$(this).parent().hasClass('done')){
            $(this).parent().children('.form-check-label').css({'text-decoration':'line-through', 'color':'red'}); 
            $(this).parent().addClass('done'); 
        }else{
            $(this).parent().children('.form-check-label').css({'text-decoration':'', 'color':''}); 
            $(this).parent().removeClass('done'); 
        }
    });
</script>


{% endblock %}
